extends layout

block content
    h1=title
    if isZoom
        p Welcome to your Zoom App - Live Transcript Display
    else
        p You're viewing your Zoom App through the browser.&nbsp;
            a(href=`/install`) Click Here
            | &nbsp;to install your app in Zoom.
        p.testing-note 
            strong Testing Mode: 
            | The transcript WebSocket connection will work in both Zoom and browser for testing.
            
    // Task Management Section
    #task-management-container
        h2 üìã Task Management
        .task-sections
            .task-section
                h3 ‚úÖ Completed Tasks
                #completed-tasks-list.task-list
                    p.no-tasks No tasks completed yet.
            .task-section
                h3 ‚è≥ Pending Suggestions
                #pending-tasks-list.task-list
                    p.no-tasks No pending task suggestions.

    // Always show transcript container for testing
    #transcript-container
        h2 üé§ Live Transcripts
        #transcript-status.status-disconnected Connecting to transcript stream...
        #transcript-list.transcript-list
            p.no-transcripts No transcripts yet. Start speaking in the meeting to see live transcripts here.
    
    style.
        #task-management-container {
            margin: 20px 0;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            background: #f8f9ff;
        }
        
        .task-sections {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 15px;
        }
        
        .task-section {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            background: white;
        }
        
        .task-section h3 {
            margin: 0 0 10px 0;
            font-size: 1.1em;
            color: #333;
        }
        
        .task-list {
            max-height: 200px;
            overflow-y: auto;
        }
        
        .no-tasks {
            color: #666;
            font-style: italic;
            text-align: center;
            padding: 20px;
            margin: 0;
        }
        
        .task-item {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 10px;
            margin-bottom: 8px;
            background: #fafafa;
        }
        
        .task-item-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 5px;
        }
        
        .task-type {
            background: #007acc;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8em;
            font-weight: bold;
        }
        
        .task-type.jira { background: #0052cc; }
        .task-type.coding { background: #28a745; }
        .task-type.meeting { background: #6f42c1; }
        .task-type.document { background: #fd7e14; }
        .task-type.task { background: #20c997; }
        
        .task-description {
            font-size: 0.9em;
            color: #333;
            margin: 5px 0;
        }
        
        .task-timestamp {
            font-size: 0.75em;
            color: #666;
            text-align: right;
        }
        
        .task-backend-indicator {
            font-size: 0.75em;
            padding: 2px 6px;
            border-radius: 4px;
            margin-top: 5px;
            display: inline-block;
        }
        
        .task-backend-indicator.backend-yes {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .task-backend-indicator.backend-no {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }
        
        #transcript-container {
            margin: 20px 0;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            background: #f9f9f9;
        }
        
        #transcript-status {
            padding: 8px 12px;
            border-radius: 4px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .status-connected {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .status-disconnected {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .status-error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        #transcript-list {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #ccc;
            border-radius: 4px;
            background: white;
            padding: 10px;
        }
        
        .transcript-item {
            border-bottom: 1px solid #eee;
            padding: 10px 0;
            margin-bottom: 10px;
        }
        
        .transcript-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }
        
        .transcript-speaker {
            font-weight: bold;
            color: #0066cc;
            margin-bottom: 4px;
        }
        
        .transcript-text {
            color: #333;
            line-height: 1.4;
            margin-bottom: 4px;
        }
        
        .transcript-time {
            font-size: 0.8em;
            color: #666;
            font-style: italic;
        }
        
        .no-transcripts {
            color: #666;
            font-style: italic;
            text-align: center;
            padding: 20px;
        }

append scripts
    // Load our transcript manager
    script(src='/js/transcript.js')
    
    if isZoom
        script(type="module" src='/js/bundle.mjs')
        script(nomodule src='/js/bundle.js')

